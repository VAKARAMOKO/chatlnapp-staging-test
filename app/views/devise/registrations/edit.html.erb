<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">      
        <h2 class="title is-3">Personnaliser Votre compte</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
           <%= f.error_notification %> 

           <div class="field">
            <div class="control">
              <%= f.input :city, required: false,  input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }, label:'Ville:', placeholder:"votre ville" %>
            </div>
          </div>
            <div class="field">
            <div class="control">
              <%= f.input :school_name, required: false,  input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }, label:'Ecole :', placeholder:"Nom de l'école:" %>
            </div>
          </div>
          <div class="columns">
            <div class="field column">
              <div class="control"><!-- un liste ou /!-->
                <%= f.input :status, as: :radio_buttons, collection: [['0', 'Eleve'], ['1', 'Prof']], label_method: :second, value_method: :first, selected: 0, label:"Status :" %> 
              </div>
            </div>

            <div class="field column">
              <div class="control"><!-- un liste ou /!-->
                <%= f.input :genre, as: :radio_buttons, collection: [['0', 'Femme'], ['1', 'Homme']], label_method: :second, value_method: :first,selected: 0,  label:'Genre :' %>
              </div>
            </div>
          </div> 
          
          
          <div class="field column is-7">
            <div class="control">
              <label class="label">Niveau:</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= f.input_field :level_class, collection: User::NIVEAUX, prompt: "Niveau de la classe", label:"Selectionne la classe" %>
                </span>
                <span class="icon is-small is-left">
                  <i class="fa fa-home"></i>
                </span>
              </div>
            </div>
          </div> 
            
                   
          
          <h2 class="title is-3">Verifier les champs suivants:</h2>

          <div class="field">
            <div class="control">
              <%= f.input :username, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }, placeholder:"Votre nom complet :" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :number_mobile, required: false,  input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }, label:'N° Tel:', placeholder:"N° Téléphone" %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :email, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }, label: 'Adresse Email :' %>
            </div>
          </div>           
          <div class="field">
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password, autocomplete: "off", hint: "Votre mot de passe pour plus de sécurité", required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }, placeholder:'Entrez votre mot de passe', label:'Mot de passe :'  %>
            </div>
          </div>


          <div class="field">
            <div class="control">
              <%= f.input :current_password, hint: "Mot de passe pour confirmer les modifications", required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }, label:'Confirmation mot de passe: ' ,placeholder:'retaper votre mot de passe'%>
            </div>
          </div>
       
          <%= f.button :submit, "Enregistrer", class:"button is-info" %>       
          

          <hr />
          <h3>Suppression de compte</h3>

            <p> <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "La suppression de votre supprimera tous vos contenu et ne sera plus recuperable?" }, method: :delete %></p>

            <%= link_to "Retour", :back %>     
          <% end %>
        <br />
        
      </div>
    </div>
  </div>
</div>

