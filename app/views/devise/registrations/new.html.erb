<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">      
        <h2 class="title is-2">S'Inscrire</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="field">
            <div class="control">
              <%= f.input :username, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }, placeholder:"Votre nom complet :", label:'Nom Complet :', autofocus: true %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :number_mobile, required: false,  input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }, label:'N° Tel:', placeholder:"N° Téléphone" %>
            </div>
          </div><div class="field">
            <div class="control">
              <%= f.input :city, required: false,  input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }, label:'Ville:', placeholder:"votre ville" %>
            </div>
          </div>
            <div class="field">
            <div class="control">
              <%= f.input :school_name, required: false,  input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }, label:'Ecole :', placeholder:"Nom de l'école:" %>
            </div>
          </div>
          
            <div class="field column">
              <div class="control"><!-- un liste ou /!-->
                <%= f.input :status, as: :radio_buttons, collection: [['0', 'Eleve'], ['1', 'Prof']], label_method: :second, value_method: :first, selected: 0, label:"Status :" %> 
              </div>
            </div>

            <div class="field column is-7">
            <div class="control">
              <label class="label">Niveau:</label>
              <div class="control has-icons-left">
                <span class="select">
                  <%= f.input_field :level_class, collection: User::NIVEAUX, prompt: "Niveau de la classe", label:"Selectionne la classe" %>
                </span>
                <span class="icon is-small is-left">
                  <i class="fa fa-home"></i>
                </span>
              </div>
            </div>
          </div>  
          


          <div class="field">
            <div class="control">
              <%= f.input :email, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }, label: 'Adresse Email :', placeholder:"Adresse email", hint:"Utilisez: VotreNumero@gmail.com , si vous n'avez pas d'email" %>
            </div>
            
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :password, required: false, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label:"Mot de passe :", placeholder:"le mot de passe :" %>
            </div>
          </div>
          
          <div class="field">
            <div class="control">
              <%= f.button :submit, "S'inscrire", class:"button is-info is-medium" %>
            </div>
          </div>
          <% end %>
          <br />
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>