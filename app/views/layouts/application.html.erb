<!DOCTYPE html>
<html>
  <head>
    <title>Chatln</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <!-- devise: global notification /!-->
    <% if flash[:notice] %>
      <div class="notification is-primary global-notification">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

    <!--navbar: top navbar /!-->
    <nav class="navbar is-info is-fluid is-fixed-top">
      <!-- compoment: brand-logo /!-->
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item is-inverted is-rounded" do %>
          <h1 class="title is-inverted is-5">ChatLn</h1>
        <% end %>
        <div class="navbar-burger burger" data-target="navbarExample">
          <span></span>
          <span></span>
            <span></span>
        </div>
      </div>

      <!--compoment Nemu: sign Up, sign in, sgn out and others /!-->
      

      <div id="navbarExample" class="navbar-menu">
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="field is-grouped">
              <% if user_signed_in? %>
              <p class="control">
                <!--/for prof!-->
                <%= link_to 'Ajouter un Doc', new_course_path, class: "button   is-rounded" %>
              </p>
            <p class="control">
                <!--/ redict_to profile with content or course buy or create!-->
              <%= link_to 'Question-Doc',root_path, class: "button is-rounded" %>
            </p>
              <span class="control is-rounded">                
                <%= link_to edit_user_registration_path, class: "button" do %>
                <%= current_user.username %>
                <% end %>
              </span>
              <p class="control">
                <%= link_to "Se Déconnecter", destroy_user_session_path, method: :delete, class: "button is-info is-inverted" %>      
              </p>           
                                             
                            
              <% else %>
                <p class="control">
                  <%= link_to 'Se Connecter', new_user_session_path, class: "button is-info is-inverted" %>
                </p>
               
                <p class="control">
                  <%= link_to 'Créer un Compte', new_user_registration_path, class: "button is-info is-inverted" %>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
